{
  "description": "Polymer-based web components for D2L inputs",
  "repository": {
    "type": "git",
    "url": "https://github.com/BrightspaceUI/inputs.git"
  },
  "name": "d2l-inputs",
  "scripts": {
    "lint": "npm run lint:wc && npm run lint:js",
    "lint:js": "eslint . --ext .js,.html demo/**/*.html",
    "lint:wc": "polymer lint --rules polymer-3",
    "start": "es-dev-server --node-resolve --dedupe --watch --open",
    "test": "npm run lint"
  },
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "devDependencies": {
    "@webcomponents/webcomponentsjs": "^2",
    "babel-eslint": "^10",
    "es-dev-server": "^2.1.0",
    "eslint": "^6",
    "eslint-config-brightspace": "^0.6.0",
    "eslint-plugin-html": "^6",
    "eslint-plugin-sort-class-members": "^1",
    "polymer-cli": "^1"
  },
  "version": "3.0.0",
  "resolutions": {
    "inherits": "2.0.3",
    "samsam": "1.1.3",
    "supports-color": "3.1.2",
    "type-detect": "1.0.0"
  },
  "main": "d2l-inputs.js",
  "dependencies": {
    "@brightspace-ui/core": "^2",
    "@polymer/polymer": "^3.0.0",
    "d2l-typography": "BrightspaceUI/typography#semver:^8"
  }
}
