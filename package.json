    "eslint-config-brightspace": "^0.6.0",
    "eslint-plugin-html": "^6",
    "eslint-plugin-sort-class-members": "^1",
    "polymer-cli": "^1"
  },
  "version": "4.2.0",
  "main": "d2l-inputs.js",
  "files": [
    "d2l-input-radio-styles.js",
    "d2l-input-shared-styles.js"
  ],
  "publishConfig": {
    "access": "public"
