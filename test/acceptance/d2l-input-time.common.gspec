== D2L Time Input ==

	d2l-input-time-container:
		visible

	d2l-input-time-container.input:
		inside d2l-input-time-container 0px left right
		width 120px

	@on closed
		d2l-input-time-container.dropdown:
			absent

	@on open
		d2l-input-time-container.dropdown:
			visible
			below d2l-input-time-container.input 10px
			width 120 to 140 px

		@on ltr
			d2l-input-time-container.dropdown.content.listbox.time-item-1:
				inside d2l-input-time-container.dropdown.content 0px top left

		@on rtl
			d2l-input-time-container.dropdown.content.listbox.time-item-1:
				inside d2l-input-time-container.dropdown.content 0px top right

		d2l-input-time-container.dropdown.content.listbox.time-item-2:
			below d2l-input-time-container.dropdown.content.listbox.time-item-1
