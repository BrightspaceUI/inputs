@objects

	d2l-input-time-container    d2l-input-time
		input                   ::d2l-shadow .d2l-input
		dropdown                ::d2l-shadow d2l-dropdown-content
			content             .dropdown-content
				listbox         iron-selector
					time-item-* .d2l-input-time-item

@on no-d2l-shadow
	@objects
		d2l-input-time-container    d2l-input-time
			input                   .d2l-input
			dropdown                d2l-dropdown-content
				content             .dropdown-content
					listbox         iron-selector
						time-item-* .d2l-input-time-item

@import d2l-input-time.common.gspec
